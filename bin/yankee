#!/usr/bin/env bash
set -eu

declare -A _yankee_required=()
declare -A _yankee_subcommands=()
declare -A _yankee_subcommand_summary=()
declare -A _yankee_subcommand_help=()

main() {
  add_lib_to_path
 
  require help
  require init
  require match
  require version

  if has_subcommand "$1"; then 
    subcommand "$@"
  else
    subcommand help
  fi
}

subcommand() {
  ${_yankee_subcommands["$1"]} "${@:2}"
}

has_subcommand() {
  [[ -n "${_yankee_subcommands[$1]:-}" ]]
}

define_subcommand() {
  local name="$1"
  local summary="$2"
  local long_help=$(cat -)

  _yankee_subcommands[$name]=subcommand_${name}
  _yankee_subcommand_summary[$name]="$2"
  _yankee_subcommand_help[$name]="$long_help"
}

require() {
  if [[ -n "${_yankee_required[$1]:-}" ]]; then
    return 0
  fi

  . "$1".sh

  _yankee_required[$1]=true
}

add_lib_to_path() {
  local lib=${BASH_SOURCE%/yankee}
  lib=${lib%bin}
  lib=${lib%lib}/share/yankee
  if [[ -d "$lib" ]]; then
    PATH="$lib:$PATH"
  fi
  lib="${lib}/lib"
  if [[ -d "$lib" ]]; then
    PATH="$lib:$PATH"
  fi

}
main "$@"
